  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') Lecturer dashboard
          .nav-collapse.collapse
            ul.nav.pull-right
              li.dropdown
                a.dropdown-toggle(href='#', role='button', data-toggle='dropdown')
                  i.icon-user
                  |  #{nim} 
                  i.caret
                ul.dropdown-menu
                  li
                    a(tabindex='-1', href='#{baseurl}/profile') Profile
                  li
                    a(tabindex='-1', href='#{baseurl}/settings') Settings
                  li.divider
                  li
                    a(tabindex='-1', href='logout') Logout
            ul.nav
              li.active
                a(href='#') Fix Students
          // /.nav-collapse
    .container-fluid
      .row-fluid
        #sidebar.span3
          ul.nav.nav-list.bs-docs-sidenav.nav-collapse.collapse
            li
              a(href='home')
                i.icon-chevron-right
                i.icon-home
                |  Dashboard
            li
              a(href='profile')
                i.icon-chevron-right
                i.icon-user
                |  Profile
            li
              a(href='candidates')
                i.icon-chevron-right
                i.icon-list
                |  Candidates (#{f.candidates.length})
            li.active
              a(href='#')
                i.icon-chevron-right
                i.icon-user
                |  Fix Students
             li
              a(href='notifications')
                div(class='')
                  span.badge.badge-info.pull-right
                i.icon-volume-up
                |  Notifications
            li
              a(href='message/all')
                span.badge.badge-info.pull-right
                i.icon-envelope
                |  Messages
            li
              a(href='#')
                span.badge.badge-info.pull-right
                i.icon-inbox
                |  Broadcast
        // /span
        #content.span9
          .row-fluid
            // block
            .block
              .navbar.navbar-inner.block-header
                .muted.pull-left All candidates
              .block-content.collapse.in
                .span12
                  .table-toolbar
                    //
                      <div class="btn-group">
                      <a href="#"><button class="btn btn-success">Add New <i class="icon-plus icon-white"></i></button></a>
                      </div>
                    legend Click NIM to see student's detail
                    .btn-group.pull-right
                      button.btn.dropdown-toggle(data-toggle='dropdown')
                        | Tools 
                        span.caret
                      ul.dropdown-menu
                        li
                          a(href='#') Print
                        li
                          a(href='#') Save as PDF
                        li
                          a(href='#') Export to Excel
                    
                  table#example2.table.table-striped.table-bordered(cellpadding='0', cellspacing='0', border='0')
                    thead
                      tr
                        th NIM
                        th Fullname
                        th Nickname
                        th IPK
                        th Reports
                       
                        
                    tbody
                      each std in stds
                        tr
                          td
                            a(href='#{baseurl}/student/detail/#{std.nim}') #{std.nim}
                          td=std.fullname
                          td=std.nickname
                          td=std.ipk
                          td
                            span(class='badge badge-#{std.notif}')=std.report_status            
                         
                          
                            
                      
            // /block
    // /.fluid-container
    script(src='/static/vendors/vendors/jquery-1.9.1.js')
