doctype html
html.no-js
  head
    title Dashboard - #{found.name}
    // Bootstrap
    link(href='/static/vendors/bootstrap/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='/static/vendors/bootstrap/css/bootstrap-responsive.min.css', rel='stylesheet', media='screen')
    link(href='/static/vendors/vendors/easypiechart/jquery.easy-pie-chart.css', rel='stylesheet', media='screen')
    link(href='/static/vendors/assets/styles.css', rel='stylesheet', media='screen')
    // HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
    script(src='/static/vendors/vendors/modernizr-2.6.2-respond-1.1.0.min.js')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') Lecturer dashboard
          .nav-collapse.collapse
            ul.nav.pull-right
              li.dropdown
                a.dropdown-toggle(href='#', role='button', data-toggle='dropdown')
                  i.icon-user
                  strong  #{found.name}
                  i.caret
                ul.dropdown-menu
                  li
                    a(tabindex='-1', href='#') Profile
                  li
                    a(tabindex='-1', href='settings') Settings
                  li.divider
                  li
                    a(tabindex='-1', href='logout') Logout
             
            ul.nav
              li.active
                a(href='#') Profile
          // /.nav-collapse
    .container-fluid
      .row-fluid
        #sidebar.span3
          ul.nav.nav-list.bs-docs-sidenav.nav-collapse.collapse
            li
              a(href='home')
                i.icon-chevron-right
                i.icon-home
                |  Dashboard
            li.active
              a(href='#')
                i.icon-chevron-right
                i.icon-user
                |  Profile
            li
              a(href='candidates')
                i.icon-chevron-right
                i.icon-list
                |  Candidates (#{found.candidates.length})
            li
              a(href='students')
                i.icon-chevron-right
                i.icon-user
                |  Fix Students 
             li
              a(href='notifications')
                div(class='')
                  span.badge.badge-info.pull-right
                i.icon-volume-up
                |  Notifications
            li
              a(href='message/all')
                span.badge.badge-info.pull-right
                i.icon-envelope
                |  Messages
            li
              a(href='#')
                span.badge.badge-info.pull-right
                i.icon-inbox
                |  Announcements
        // /span
        #content.span9
          .row-fluid
            .navbar
              .navbar-inner
                ul.breadcrumb
                  i.icon-chevron-left.hide-sidebar
                    a(href='#', title='Hide Sidebar', rel='tooltip')  
                  i.icon-chevron-right.show-sidebar(style='display:none;')
                    a(href='#', title='Show Sidebar', rel='tooltip')  
                  li 
                    a(href='home') Dashboard
                    span.divider /
                  li Profile
          .row-fluid
            // block
            .block
              .navbar.navbar-inner.block-header
                .muted.pull-left Lecturer's Profile
              .block-content.collapse.in
                .span9
                  form.form-horizontal(method='post' action='profile/update')
                    fieldset
                      legend Fill the form to change your profile
                      .control-group
                        label.control-label(for='focusedInput') Name
                        .controls
                          input#focusedInput.input-xlarge.focused(type='text' value=found.name required)
                      .control-group
                        label.control-label(for='focusedInput') Undergraduate
                        .controls
                          input#focusedInput.input-xlarge.focused(type='text' value=found.educations.undergraduate name='ipk' required)
                      .control-group
                        label.control-label(for='focusedInput') Master
                        .controls
                          input#focusedInput.input-xlarge.focused(type='text' value=found.educations.master required)
                      .control-group
                        label.control-label(for='focusedInput') Doctoral
                        .controls
                          input#focusedInput.input-xlarge.focused(type='text' value=found.educations.doctoral, name='fullname' required)
                      
                      .form-actions
                        button.btn.btn-primary(type='submit') Save changes
                        &nbsp;
                        button.btn(type='reset') Cancel
                
                  //- .chart(data-percent='13') 13%
                  //- .chart-bottom-heading
                  //-   span.label.label-info Orders
            // /block
      hr
    // /.fluid-container
    script(src='/static/vendors/vendors/jquery-1.9.1.min.js')
    script(src='/static/vendors/bootstrap/js/bootstrap.min.js')
    script(src='/static/vendors/vendors/easypiechart/jquery.easy-pie-chart.js')
    script(src='/static/vendors/assets/scripts.js')
    script.
      $(function() {
      // Easy pie charts
      $('.chart').easyPieChart({animate: 1000});
      });
