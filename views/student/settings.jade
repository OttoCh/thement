          .row-fluid
            // block
            .block
              .navbar.navbar-inner.block-header
                .muted.pull-left Settings
              .block-content.collapse.in
                .span12
                  form.form-horizontal(method='post' action='settings')
                    fieldset
                      legend Change password
                      .control-group
                        label.control-label(for='focusedInput') Current password
                        .controls
                          input#focusedInput.input-xlarge.focused(type='text', name='old_pass', value='#{oldpass}', readOnly='true' required)
                      .control-group
                        label.control-label(for='focusedInput') New password
                        .controls
                          input#focusedInput.input-xlarge.focused(type='password', name='new_pass', required)
                      .control-group
                        label.control-label(for='focusedInput') Retype your new password
                        .controls
                          input#focusedInput.input-xlarge.focused(type='password', name='re_newpass', required)
                    
                      .form-actions
                        button.btn.btn-primary(type='submit') Save changes
                        &nbsp;
                        button.btn(type='reset') Cancel

                  //- flash message
                  if error && error.length > 0
                    .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                      button.close(type="button" data-dismiss="alert" aria-label="Close")
                        span(aria-hidden="true") ×
                      p(class='lead')= error
                  if success && success.length > 0
                    .alert.alert-success.alert-dismissible.fade-in(role="alert")
                      button.close(type="button" data-dismiss="alert" aria-label="Close")
                        span(aria-hidden="true") ×
                      p(class='lead')= success
                  
            // /block
            // footer
            center
              include ../static/footer
