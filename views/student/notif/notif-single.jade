  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') Student dashboard
          .nav-collapse.collapse
            ul.nav.pull-right
              li.dropdown
                a.dropdown-toggle(href='#', role='button', data-toggle='dropdown')
                  i.icon-user
                  strong  #{nim} 
                  i.caret
                ul.dropdown-menu
                  li
                    a(tabindex='-1', href=baseurl+'/profile') Profile
                  li
                    a(tabindex='-1', href=baseurl+'/settings') Settings
                  li.divider
                  li
                    a(tabindex='-1', href=baseurl+'/logout') Logout
            ul.nav
              li.active
                a(href='#') Notifications
          // /.nav-collapse
    .container-fluid
      .row-fluid
        #sidebar.span3
          ul.nav.nav-list.bs-docs-sidenav.nav-collapse.collapse
            li
              a(href='../home')
                
                i.icon-home
                |  Dashboard
            li
              a(href='../profile')
                
                i.icon-user
                |  Profile
            li
              a(href='../lecturers')
                
                i.icon-briefcase
                |  Lecturers
            li(class='#{msgReport}')
              a(href='../reports/all')
                
                i.icon-book
                |  Reports
            li.active
              a(href='#')
                span.badge.badge-info.pull-right
                i.icon-volume-up
                |  Notifications
            li
              a(href='../message/all')
                span.badge.badge-info.pull-right
                i.icon-envelope
                |  Messages
            li
              a(href='#')
                span.badge.badge-info.pull-right
                i.icon-inbox
                |  Broadcast
        // /span
        #content.span9
          .row-fluid
            .navbar
              .navbar-inner
                ul.breadcrumb
                  i.icon-chevron-left.hide-sidebar
                    a(href='#', title='Hide Sidebar', rel='tooltip')  
                  i.icon-chevron-right.show-sidebar(style='display:none;')
                    a(href='#', title='Show Sidebar', rel='tooltip')  
                  li
                    a(href=baseurl+'/home') Dashboard
                    span.divider /
                  li
                    a(href=baseurl+'/notifications') Notifications
                    span.divider /
                  li Notif detail
          .row-fluid
            // block
            .block
              .navbar.navbar-inner.block-header
                .muted.pull-left All notifications
              .block-content.collapse.in
                .span12
                  .table-toolbar
                    //
                      <div class="btn-group">
                      <a href="#"><button class="btn btn-success">Add New <i class="icon-plus icon-white"></i></button></a>
                      </div>
                    legend SINGLE NOTIF
                    .btn-group.pull-right
                      button.btn.dropdown-toggle(data-toggle='dropdown')
                        | Tools 
                        span.caret
                      ul.dropdown-menu
                        li
                          a(href='#') Print
                        li
                          a(href='#') Save as PDF
                        li
                          a(href='#') Export to Excel
                    br
                  
                    p Notif ID : #{idToFind}
                    p MESSAGE : #{found.notif}
                    p DATE : #{found.date}
                    
                    a(href='../notifications' data-toggle='modal' class='btn btn-info') 
                      i.icon-arrow-left.icon-white
                      strong  Back to all notifications
                      
      // footer
      center
        include ../../static/footer           
