doctype html
html
  head
    title #{title} - 
    // Bootstrap
    link(href='/static/vendors/bootstrap/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='/static/vendors/bootstrap/css/bootstrap-responsive.min.css', rel='stylesheet', media='screen')
    link(href='/static/vendors/assets/styles.css', rel='stylesheet', media='screen')
    link(href='/static/vendors/assets/DT_bootstrap.css', rel='stylesheet', media='screen')
    //if lte IE 8
      script(language='javascript', type='text/javascript', src='/static/vendors/vendors/flot/excanvas.min.js')
    // HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
    script(src='/static/vendors/vendors/modernizr-2.6.2-respond-1.1.0.min.js')
    style.
      i {color:white}
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') Student dashboard
          .nav-collapse.collapse
            ul.nav.pull-right
              li.dropdown
                a.dropdown-toggle(href='#', role='button', data-toggle='dropdown')
                  i.icon-user
                  strong  #{nim} 
                  i.caret
                ul.dropdown-menu
                  li
                    a(tabindex='-1', href='#{baseurl}/profile') Profile
                  li
                    a(tabindex='-1', href='#{baseurl}/settings') Settings
                  li.divider
                  li
                    a(tabindex='-1', href='../logout') Logout
            ul.nav
              li.active
                a(href='#') Reports
          // /.nav-collapse
    .container-fluid
      .row-fluid
        #sidebar.span3
          ul.nav.nav-list.bs-docs-sidenav.nav-collapse.collapse
            li
              a(href='../../home')
                i.icon-chevron-right
                i.icon-home
                |  Dashboard
            li
              a(href='../../profile')
                i.icon-chevron-right
                i.icon-user
                |  Profile
            li
              a(href='../../lecturers')
                i.icon-chevron-right
                i.icon-briefcase
                |  Lecturers
            li(class='#{msgReport}')
              a(href='../../reports/all')
                i.icon-chevron-right
                i.icon-book
                |  Reports
            li
              a(href='../../notifications')
                span.badge.badge-info.pull-right
                i.icon-volume-up
                |  Notifications
            li.active
              a(href='#')
                span.badge.badge-info.pull-right
                i.icon-envelope
                |  Messages
            li
              a(href='#')
                span.badge.badge-info.pull-right
                i.icon-inbox
                |  Broadcast
        // /span
        #content.span9
          .row-fluid
            .navbar
              .navbar-inner
                ul.breadcrumb
                  i.icon-chevron-left.hide-sidebar
                    a(href='#', title='Hide Sidebar', rel='tooltip')  
                  i.icon-chevron-right.show-sidebar(style='display:none;')
                    a(href='#', title='Show Sidebar', rel='tooltip')  
                  li
                    a(href='../home') Dashboard
                    span.divider /
                  li Messages
          .row-fluid
            // block
            .block
              .navbar.navbar-inner.block-header
                .muted.pull-left Messages
              .block-content.collapse.in
                .span3
                  h5 Supervisor
                  i.icon-user 
                  |  #{supervFull}
                  p
                  h5 Last seen
                  i.icon-time
                  |  #{last_seen}
                  p
                  
                  hr
                  a(href='../all?type=broadcast' data-toggle='modal' class='btn btn-info') 
                    i.icon-arrow-left.icon-white
                    strong  Back to all broadcasts
                
                  //- end load modal
                  hr
                  p
                  
                .span9
                  .span9
                    
                    //- inbox message
                    

                    //- flash message
                    if error && error.length > 0
                      .alert.alert-danger.alert-dismissible.fade-in(role="alert")
                        button.close(type="button" data-dismiss="alert" aria-label="Close")
                          span(aria-hidden="true") ×
                        p(class='lead')= error
                    if success && success.length > 0
                      .alert.alert-success.alert-dismissible.fade-in(role="alert")
                        button.close(type="button" data-dismiss="alert" aria-label="Close")
                          span(aria-hidden="true") ×
                        strong Success!
                        p= success

                                         
                    //- broadcast message
                    h4(class='#{showBroadcast}') Broadcast Message Detail
                    table.table.table-hover(class='#{showBroadcast} success')
                      thead
                        tr.success
                          
                          th From
                          th Body
                          th Date
                          
                          
                      tbody
                          tr
                            td
                              span.label.label-info=found.author
                            td=found.body
                            td=timeBC
                            
                  .span3
                    h5 Other student that also receive this : 
                    p #{other}           
     // footer
    center
      include ../../static/footer                    
                      
            // /block
    // /.fluid-container
