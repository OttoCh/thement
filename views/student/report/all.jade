  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') Student dashboard
          .nav-collapse.collapse
            ul.nav.pull-right
              li.dropdown
                a.dropdown-toggle(href='#', role='button', data-toggle='dropdown')
                  i.icon-user
                  |  #{nim} 
                  i.caret
                ul.dropdown-menu
                  li
                    a(tabindex='-1', href='#{baseurl}/profile') Profile
                  li
                    a(tabindex='-1', href='#{baseurl}/settings') Settings
                  li.divider
                  li
                    a(tabindex='-1', href='logout') Logout
            ul.nav
              li.active
                a(href='#') Lecturers
          // /.nav-collapse
    .container-fluid
      .row-fluid
        #sidebar.span3
          ul.nav.nav-list.bs-docs-sidenav.nav-collapse.collapse
            li
              a(href='#{baseurl}/home')
                i.icon-chevron-right
                |  Dashboard
            li
              a(href='#{baseurl}/profile')
                i.icon-chevron-right
                |  Profile
            li
              a(href='#{baseurl}/lecturers')
                i.icon-chevron-right
                |  Lecturers  
            li.active
              a(href='#')
                i.icon-chevron-right
                |  Reports
        // /span
        #content.span9
          .row-fluid
            // block
            .block
              .navbar.navbar-inner.block-header
                .muted.pull-left All lecturers
              .block-content.collapse.in
                .span12
                  .table-toolbar
                    //
                      <div class="btn-group">
                      <a href="#"><button class="btn btn-success">Add New <i class="icon-plus icon-white"></i></button></a>
                      </div>
                    legend Click report's title to see detail
                    p(class='#{approvalStatus}') Status approval :
                    div(class='#{startReport}')
                      h3 You have no report yet
                      a(href='../report/create' class='btn btn-info') Start creating report
                    h4(style='color:#{colored}') #{statusColored}
                    p(class='#{showCreateReport}')
                      a(href='../report/create?from=all' class='btn btn-success') Create another report
                    p(class='#{showEditReport}')
                      a(href='../report/update?from=all' class='btn btn-primary') Edit
                        &nbsp;
                        i.icon-download-alt
                          

                    .btn-group.pull-right
                      button.btn.dropdown-toggle(data-toggle='dropdown')
                        | Tools 
                        span.caret
                      ul.dropdown-menu
                        li
                          a(href='#') Print
                        li
                          a(href='#') Save as PDF
                        li
                          a(href='#') Export to Excel
                    br
                  table#example2.table.table-striped.table-bordered(cellpadding='0', cellspacing='0', border='0')
                    thead
                      tr
                        th Report Title
                        th Report Body
                        th Attachment 
                        th Last Edit
                        
                    tbody
                      each report in objReports  
                        tr
                          td=report.title
                          td=report.body 
                          td
                            a(href='#{report.file_location}')=report.file_name
                          td=report.last_edit
                          
                      
            // /block
